@model List<Category>
<h3 class="text-center">Tüm Kategoriler</h3>
<a asp-action="CreateCategory" asp-controller="Admin" class="btn btn-outline-primary mb-2">Kategori Oluştur</a>
<table class="table table-responsive table-hover ">
    <thead class="table-dark">
        <tr>
            <th>Kategori ID</th>
            <th>Kategori Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td width="25%">@c.CategoryId</td>
                <td>@c.CategoryName</td>
                <td width="25%">
                    <a type="button" class="btn btn-primary btn-sm" style="width: 4.2rem" asp-controller="Admin" asp-action="EditCategory" asp-route-categoryId="@c.CategoryId">
                        Düzenle
                    </a>
                    <a type="button" class="btn btn-danger btn-sm" style="width: 4.2rem" asp-controller="Admin" asp-action="DeleteCategory" asp-route-categoryId="@c.CategoryId">
                        Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>